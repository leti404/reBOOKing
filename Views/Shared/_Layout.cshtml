<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - reBOOKing</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/reBOOKing.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar1">
            <div class="navbar-logo">
                <a href='@Url.Action("Index")'>
                    <img src="/img/logo.png" alt="logo">
                </a>
            </div>
            
            <ul class="navbar-links">
                <li><a href='@Url.Action("SobreNosotros")'>Sobre Nosotros</a></li>
                <li><a href='@Url.Action("Donar")'>Donar</a></li>
            </ul>
            
            <div class="container-fluid">
            <form class="d-flex" role="search">
            <input class="form-control me-2" type="search" placeholder="Busca tu libro" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Buscar</button>
            </form>
        </div>

            <!-- Icono de Usuario -->
            <div class="navbar-user">
                <img src="/img/usuario.png" alt="Usuario" class="user-icon" data-bs-toggle="offcanvas" data-bs-target="#offcanvasUserMenu" aria-controls="offcanvasUserMenu">
            </div>
        </nav>

        <!-- Menú Offcanvas para Usuario -->
        <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasUserMenu" aria-labelledby="offcanvasUserMenuLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasUserMenuLabel">Menú de Usuario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                    <li class="nav-item">
                        <img src="/img/usuario.png" alt="Usuario" class="user-icon" data-bs-toggle="offcanvas" data-bs-target="#offcanvasUserMenu" aria-controls="offcanvasUserMenu">
                        <a class="nav-link active" aria-current="page" href='@Url.Action("Usuario")'>NOMBRE</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href='@Url.Action("TusPublicaciones")'>Tus Publicaciones</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href='@Url.Action("TusFavoritos")'>Tus Favoritos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href='@Url.Action("CerrarSesion")'>Cerrar Sesion</a>
                    </li>
                </ul>
            </div>
        </div>
    </header>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

        @RenderBody()


    <footer class="py-3 my-4">
            <ul class="nav justify-content-center border-bottom pb-3 mb-3">
                <li class="nav-item"><a href='@Url.Action("Index")' class="nav-link px-2 text-body-secondary">Home</a></li>
                <li class="nav-item"><a href='@Url.Action("SobreNosotros")' class="nav-link px-2 text-body-secondary">Sobre Nosotros</a></li>
                <li class="nav-item"><a href='@Url.Action("Donar")' class="nav-link px-2 text-body-secondary">Donar</a></li>
            </ul>
            <div class ="logoFooter">
                <a href='@Url.Action("Index")'>
                    <img src="/img/logo.png" alt="logo">
                </a>
            </div>
                
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



