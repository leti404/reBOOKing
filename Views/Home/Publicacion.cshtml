@{
    ViewData["Title"] = "Donar";
}

<div class="container book-detail">
    <div class="row align-items-center">
        <div class="col-md-4">
            <img class="img-fluid" src="@ViewBag.publicacion.imagen" alt="@ViewBag.nombreLibro" />
        </div>
        <div class="col-md-8">
            <h2>@ViewBag.nombreLibro</h2>
            <p class="price text-primary">$@ViewBag.publicacion.precio</p>
            <p><strong>Estado:</strong> <span class="estado">Excelente</span></p>
            <p><strong>Usuario:</strong> @ViewBag.publicacion.id_usuario</p>
            <p><strong>Fecha:</strong> @ViewBag.publicacion.fecha</p>
            
            <div class="d-flex">
                <button class="btn btn-primary me-2">COMPRAR</button>
                <button class="btn btn-outline-secondary">
                    <i class="bi bi-cart"></i> Agregar al carrito
                </button>
            </div>
        </div>
    </div>
</div>
