@{
    ViewData["Title"] = "Tus Favoritos";
}

 <div class="row publicaciones-row"> 
        @foreach (publicaciones Publicacion in ViewBag.listaPublicaciones)
        {
            <div class="col-md-3">
                <a href='@Url.Action("Publicacion", "Home")'  class="card-rebooking">
                    <div class="card-rebooking">
                        <img class="card-img-top-rebooking" src="@Publicacion.imagen" alt="@Publicacion.libro" />
                        <div class="card-body-rebooking">
                            <h5 class="card-title-rebooking"> @BD.ObtenerNombreLibroPorPublicacion(int.Parse(Publicacion.libro)) </h5>
                            <p class="card-price-rebooking"> @Publicacion.precio.ToString("C")</p>
                        </div>
                        
                    </div>
                </a>
            </div>
        }
    </div>