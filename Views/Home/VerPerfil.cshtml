<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil de Usuario</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <!-- Cabecera de perfil (opcional) -->
   

    <div class="profile-container">
        <!-- Imagen de perfil -->
        <div class="profile-picture" style="background-image: url('https://www.w3schools.com/w3images/avatar2.png');"></div>

        <!-- Nombre del usuario -->
        <h2 class="profile-name">@ViewBag.UsuarioAjeno.nombre_usuario</h2>

        <div class="profile-info">
            <p><span class="profile-label">Nombre Completo:</span> @ViewBag.UsuarioAjeno.nombre @ViewBag.UsuarioAjeno.apellido</p>
            <p><span class="profile-label">Fecha Nacimiento:</span> @ViewBag.UsuarioAjeno.fecha_nacimiento</p>
            <p><span class="profile-label">Email:</span> @ViewBag.UsuarioAjeno.gmail</p>
            <p><span class="profile-label">Fecha de nacimiento:</span> @ViewBag.UsuarioAjeno.fecha_nacimiento</p>
            <p><span class="profile-label">Escuela:</span>@ViewBag.UsuarioAjeno.nombre_escuela</p>
            <p><span class="profile-label">Año Escolar:</span>@ViewBag.UsuarioAjeno.año_escolar</p>
        </div>

        <!-- Botones de acción (opcional) -->
        <div class="profile-actions">
            <button>Mensaje</button>
            <button>Agregar a amigos</button>
        </div>
    </div>
</body>
</html>

