@{
    ViewData["Title"] = "Registrarse";
}

<div class="register-container">
    <h2 class="register-title">Crear cuenta</h2>
    <form id="registerForm" method="post" action='@Url.Action("VerificarRegistro", "Home")'>

        <!-- Paso 1 -->
        <div class="register-step-1" id="register-step-1">
            <label class="register-label" for="nombre">Nombre</label>
            <input class="register-input" type="text" id="nombre" name="nombre" required>

            <label class="register-label" for="apellido">Apellido</label>
            <input class="register-input" type="text" id="apellido" name="apellido" required>

            <div class="register-buttons">
                <div></div>
                <button type="button" class="register-btn primary" onclick="nextStep()">Siguiente</button>
            </div>
        </div>

        <!-- Paso 2 -->
        <div class="register-step" id="register-step-2">
            <label class="register-label" for="fecha_nacimiento">Fecha de nacimiento</label>
            <input class="register-input" type="date" id="fecha_nacimiento" name="fecha_nacimiento" required>

            <div class="register-buttons">
                <button type="button" class="register-btn secondary" onclick="prevStep()">Anterior</button>
                <button type="button" class="register-btn primary" onclick="nextStep()">Siguiente</button>
            </div>
        </div>

        <!-- Paso 3 -->
        <div class="register-step" id="register-step-3">
            <label class="register-label" for="nombre_usuario">Nombre de usuario</label>
            <input class="register-input" type="text" id="nombre_usuario" name="nombre_usuario" required>

            <label class="register-label" for="gmail">Email</label>
            <input class="register-input" type="email" id="gmail" name="gmail" required>

            <label class="register-label" for="contraseña">Contraseña</label>
            <input class="register-input" type="password" id="contraseña" name="contraseña" required>

            <label class="register-label" for="confirmar_contraseña">Confirmar contraseña</label>
            <input class="register-input" type="password" id="confirmar_contraseña" name="confirmar_contraseña" required>

            <span id="error-contraseña" class="error-msg">Las contraseñas no coinciden.</span>

            <div class="register-buttons">
                <button type="button" class="register-btn secondary" onclick="prevStep()">Anterior</button>
                <button type="submit" class="register-btn primary">Registrarse</button>
            </div>
        </div>

    </form>
</div>
